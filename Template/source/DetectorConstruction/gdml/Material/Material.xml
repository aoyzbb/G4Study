	</element>

	<element Z="29" formula="Cu" name="Copper">
		<atom value="63.55" />
	</element>

	<element Z="32" formula="Ge" name="Germanium">
		<atom value="72.59" />
	</element>

	<element Z="55" formula="Cs" name="Cesium">
		<atom value="135.9054" />
	</element>

	<!--Gadolinium isotope definition-->
	<element Z="64" formula="Gd" name="Gd152">
		<atom value="151.91979" />
	</element>
	<element Z="64" formula="Gd" name="Gd154">
		<atom value="153.92087" />
	</element>
	<element Z="64" formula="Gd" name="Gd155">
		<atom value="154.92262" />
	</element>
	<element Z="64" formula="Gd" name="Gd156">
		<atom value="155.92212" />
	</element>
	<element Z="64" formula="Gd" name="Gd157">
		<atom value="156.92396" />
	</element>
	<element Z="64" formula="Gd" name="Gd158">
		<atom value="157.92410" />
	</element>
	<element Z="64" formula="Gd" name="Gd160">
		<atom value="159.92705" />
	</element>

	<!-- G4dyb uses ubundance, we need fraction mass = ubundance*mass/avgmass -->
	<element name="Gadolinium">
		<fraction ref="Gd152" n="0.002*152/157.318" />
		<fraction ref="Gd154" n="0.022*154/157.318" />
		<fraction ref="Gd155" n="0.149*155/157.318" />
		<fraction ref="Gd156" n="0.206*156/157.318" />
		<fraction ref="Gd157" n="0.157*157/157.318" />
		<fraction ref="Gd158" n="0.247*158/157.318" />
		<fraction ref="Gd160" n="0.217*160/157.318" />
	</element>

	<element Z="71" formula="Lu" name="Lutetium">
		<atom value="174.97" />
	</element>

	<element Z="82" formula="Pb" name="Plumbum">
		<atom value="207.2" />
	</element>

	<element Z="83" formula="Bi" name="Bismuth">
		<atom value="208.98" />
	</element>


	<!-- Material -->
	<!-- |        -->
	<!-- |- Gas   -->
	<material name="Vacuum" Z="1">
		<D unit="g/cm3" value="9.9999999999999998e-17" />
		<atom unit="g/mole" value="1.008" />
	</material>
	

	<material formula="ArGas" name="ArgonGas">
		<D value="0.001782" />
		<composite n="1" ref="Argon" />
	</material>

	<material formula="CO2" name="CarbonDioxide">
		<D value="0.001" />
		<composite n="2" ref="Oxygen" />
		<composite n="1" ref="Carbon" />
	</material>

	<material formula="C4H10" name="Isobutane">
		<D value="0.00242" />
		<composite n="4" ref="Carbon" />
		<composite n="10" ref="Hydrogen" />
	</material>

	<!-- |        -->
	<!-- |- Gas Mixture   -->

	<material formula="Ar_C4H10" name="ArgonButane">
		<D value="0.001835" />
		<fraction n="0.7" ref="ArgonGas" />
		<fraction n="0.3" ref="Isobutane" />
	</material>

	<!-- |        -->
	<!-- Liquid   -->
	<material name="Water" formula="H2O">
		<D value="1.0" />
		<composite n="2" ref="Hydrogen" />
		<composite n="1" ref="Oxygen" />
	</material>

	<material formula="ArLiquid" name="liquidArgon">
		<D value="1.390" />
		<composite n="1" ref="Argon" />
	</material>

	<!-- |        -->
	<!-- Solid    -->

	<material formula="Fe" name="Iron">
		<D value="7.9" />
		<composite n="1" ref="Iron" />
	</material>

	<material formula="FR4" name="FR4">
		<D value="8.9" />
		<fraction n="1.0" ref="Copper" />
	</material>

	<material formula="rock" name="Rock">
		<D value="2.8" />
		<fraction n="0.4660" ref="Oxygen" />
		<fraction n="0.2772" ref="Silicon" />
		<fraction n="0.0813" ref="Aluminium" />
		<fraction n="0.05" ref="Iron" />
		<fraction n="0.0363" ref="Calcium" />
		<fraction n="0.0283" ref="Sodium" />
		<fraction n="0.0259" ref="Potassium" />
		<fraction n="0.0209" ref="Magnesium" />
		<fraction n="0.0141" ref="Carbon" />
	</material>

	<!-- |        -->
	<!-- Crystal  -->

	<material formula="Bi4Ge3O12" name="BGO">
		<D value="7.10" />
		<composite n="12" ref="Oxygen" />
		<composite n="3" ref="Germanium" />
		<composite n="4" ref="Bismuth" />
	</material>

	<material formula="Lu2SiO5" name="LSO">
		<D value="7.40" />
		<composite n="5" ref="O" />
		<composite n="2" ref="Lu" />
		<composite n="1" ref="Si" />
	</material>

</materials>